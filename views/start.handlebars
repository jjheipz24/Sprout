    </script>

    <script>
        //LOADER
        function changeImage(counter) {
            var images = [
                '<img class="loaderImg" id="cactusLoader" src="assets/images/plants/cactus-sprout.png">',
                '<img class="loaderImg" src="assets/images/plants/fiddle-sprout.png">',
                '<img class="loaderImg" src="assets/images/plants/jade-sprout.png">',
            ];

            $(".loader .image").html("" + images[counter] + "");
        }

        function loading() {
            document.getElementById("startContent").style.display = "none";
            var num = 0;

            for (i = 0; i <= 101; i++) {
                setTimeout(function () {
                    $('.loader span').html(num + '%');

                    if (num == 101) {
                        console.log(100);
                        clearInterval();
                        document.getElementById("startContent").style.display = "flex";
                        document.getElementById("startLoad").style.display = "none";
                    }
                    num++;
                }, i * 120);
            };
            //document.getElementById("startBody").style.display = "block";
        }

        $(document).ready(function () {
            var counter = 0;

            // Start the changing images
            setInterval(function () {
                if (counter == 3) {
                    counter = 0;
                }

                changeImage(counter);
                counter++;
            }, 3000);

            // Set the percentage off
            loading();
        });


    </script>

