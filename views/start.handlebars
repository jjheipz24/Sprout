    <script>
        // LOADING PAGE
        // Grabs content and loading divs 
        let startScreen = document.getElementById('startContent');
        let loadingScreen = document.getElementById('startLoad');

        //PLANT LOADER ANIMATION
        function changeImage(counter) {
            var images = [
                '<img class="loaderImg" id="cactusLoader" src="assets/images/plants/cactus-sprout.png">',
                '<img class="loaderImg" src="assets/images/plants/fiddle-sprout.png">',
                '<img class="loaderImg" src="assets/images/plants/jade-sprout.png">',
            ];

            $(".loader .image").html("" + images[counter] + "");
        }

        // Displays loading screen instead of content page
        function loading() {
            startScreen.style.display = "none";
            var num = 68;

            for (i = 0; i <= 101; i++) {
                setTimeout(function () {
                    $('.loader span').html(num + '%');

                    if (num == 101) {
                        console.log(100);
                        clearInterval();
                        toggleView();
                    }
                    num++;
                }, i * 110);
            };
            //document.getElementById("startBody").style.display = "block";
        }

        // Switches between loading and main screen
        function toggleView() {
            loadingScreen.style.display = "none";
            startScreen.style.display = "flex";
            startScreen.classList.add('animate__animated', 'animate__fadeIn');
            startScreen.style.setProperty('--animate-duration', '1.5s');
            console.log(startScreen);
        }

        $(document).ready(function () {
            var counter = 0;

            // Start the changing images
            setInterval(function () {
                if (counter == 3) {
                    counter = 0;
                }

                changeImage(counter);
                counter++;
            }, 3000);

            // Set the percentage off
            loading();
        });
    </script>

