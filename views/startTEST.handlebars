    <script src="/assets/bundle.js"></script>

    <!-- SLIDESHOW ANIMATIONS -->
    <script>

        let slideIndex = 1;
        showSlides(slideIndex);

        let slides = document.getElementsByClassName('startSlide');

        function plusSlides(n) {
            showSlides(slideIndex += n);
        }

        function currentSlide(n) {
            showSlides(slideIndex = n);
        }

        function showSlides(n) {
            var i;
            var slides = document.getElementsByClassName("startSlide");
            var dots = document.getElementsByClassName("dot");
            for (i = 0; i < slides.length; i++) {
                slides[i].style.display = "none";  
            }
            slideIndex++;
            if (slideIndex > slides.length) {slideIndex = 1}    
            for (i = 0; i < dots.length; i++) {
                dots[i].className = dots[i].className.replace(" active", "");
            }
            slides[slideIndex-1].style.display = "block";  
            dots[slideIndex-1].className += " active";
            setTimeout(showSlides, 5000); // Change image every 2 seconds
        }
        
    </script>

    <!-- PLANT SCROLL ANIMATION -->
    <script>
        let plantsBig = true;
        let scrollImage = document.getElementById('scrollDown');

        let plantArray = document.getElementsByClassName('startPlant');
        let snake = document.getElementById('startSnake');

        document.addEventListener('wheel', function(e) {

            if (event.deltaY < 0) {
                scalePlantsUp();                

            } else if (event.deltaY > 0) {
                scalePlantsDown();
            }
            displayArrow();
        });

        function scalePlantsUp() {
            for(let i = 0; i < plantArray.length; i++) {
                plantArray[i].style.width = '80vw';
            }
            plantsBig = true;
        }

        function scalePlantsDown() {
            for(let i = 0; i < plantArray.length; i++) {
                plantArray[i].style.width = '38vw';
            }
            plantsBig = false;
        }

        function displayArrow() {
            if(plantsBig) {
                scrollImage.style.display = 'block';
                console.log(plantsBig);
            } else {
                scrollImage.style.display = 'none';
                console.log(plantsBig);
            }
        }

    </script>
